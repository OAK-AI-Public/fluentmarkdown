{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "es2015",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true,
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions" : true,
  },
  "include": ["src"]
}